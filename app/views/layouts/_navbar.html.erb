<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if user_signed_in?  %>
        <a href = "/" class="navbar-brand" >Message</a>
      </a>
    <% else %>
       <a class="navbar-brand" >Message</a>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
